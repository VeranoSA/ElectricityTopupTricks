<div class="content">
        <h2 class="content-head is-center">Choose Appliance and Use Electricity</h2>

        <div class="pure-g">
            <div class="l-box-lrg pure-u-1 pure-u-md-2-5">
                <form class="pure-form pure-form-stacked" action="/meter/:street_id" method="post">
                    <fieldset>
                        <div>
                            <label for="">Choose Appliance:</label>
                        <select name="shops">
                            {{#each meters}}
                            <option value="{{this.id}}">{{this.name}}</option>
                        {{/each}}
                        </select>
                        </div>
                        

                        <button type="submit" class="pure-button">Use Electric</button>
                    </fieldset>
                </form>
            </div>